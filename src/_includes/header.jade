mixin header(title)
  nav.navbar-inverse.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(
          type='button'
          data-toggle='collapse'
          data-target='#header-navbar'
        )
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='./')
          span LE
      .collapse.navbar-collapse#header-navbar
        ul.nav.navbar-nav.navbar-right
          li(class=title=='Home'?'active':undefined)
            a(href='./') Home
          li(class=title=='Work'?'active':undefined)
            a(href='work') Work
          li(class=title=='About'?'active':undefined)
            a(href='about') About