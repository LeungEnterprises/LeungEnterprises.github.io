extends ../layout

block head
  title Ashé Attire - Leung Enterprises Portfolio
  meta(name="description" content="Building Ashé Attire's website required creativity and mobile-readiness.")
  style.
    .ashe::before {
      background: url('/img/sunsetwaves.jpg');
      background-size: cover;
      background-position: 70%;
    }
    
block content
  - // var page = 'portfolio/ashe-attire'
  - // so that portfolio will be highlighted
  - var page = 'portfolio'
  include ../partials/header
  main
    .jumbotron.flex-center.half-page.cc-before-bg.ashe.transparent-bg.trianglify
      .container
        .spacer-60
        div
          h1.text-light.text-uppercase.wow.fadeIn Ashé Attire
          h2.text-light.wow.fadeIn(data-wow-delay='0.3s').
            A clothing brand established in 2015 by two high school students who set out to make a 
            difference through t-shirts.
    .jumbotron.half-page.light-bg
      .container-fluid
        br
        br
        .row.wow.fadeIn
          .col-md-6
            a(href='http://aseattire.com/')
              img.img-responsive.box-shadow(src="/img/ashe.jpg")
          .col-md-5.col-md-offset-1
            h2 Embracing Diversity
            p.
              Ashé Attire's clothing brings together patterns from all over the world, combining many different
              styles to create something that is greater than the sum of its parts.  Ashé was looking for
              a website which would not only convey their message, but also showcase the diversity that they
              stood for.  Leung Enterprises met with the founders of Ashé multiple times in order to realize this
              vision.  Through the careful selection of images and typography, we built a website that is a genuine
              expression of diversity.
            br
            a.btn.btn-info.visit-website(href='http://aseattire.com/') Visit Website&nbsp;&nbsp;#[i.ion-forward]
        .clearfix
        .col-md-12.text-center
          br
          br
          br
          a.btn.btn-success.btn-lg(href='/portfolio') Back to Portfolio
        .clearfix
        br
        br
    .jumbotron.full-page.parallax-window.ashe.flex-center(data-parallax='scroll' data-speed='0.25' data-image-src='/img/sunsetwaves.jpg' data-position='top left')
      .container
        .testimonial-container.row
          .col-md-2.text-right
            i.quote-left
          .col-md-10
            p.testimonial.
              Ard, tell ya customers that you worked quickly and customized the site to exactly how we wanted it.
              <br><br>
              #[span.small.text-style-normal &ndash; Mohammed Rashid, CEO of Ashé Attire]
    include ../partials/footer
    
block scripts
  script(src='/js/trianglify-0.3.1.min.js')
  script.
    function genTriangles() {
      var height = window.innerHeight;
      var width = window.innerWidth;
      var colorFunc = function(x, y) {
        return 'hsl(0,0%,'+Math.floor(Math.abs(x*y*100))+'%)';
      };
      var pattern = Trianglify({
        // in case the jumbotron is a bit bigger
        height: height * 1.3,
        width: width,
        cell_size: 100,
        color_function: colorFunc
      });
      var image = pattern.png();
      var elements = [".trianglify"];
      var afterElements = elements.map(function(el) {
        return el + '::after';
      });
      var css = "<style id='trianglify-styles'>" +
                  elements.toString() + " { " +
                    "position: relative;" +
                  "}" +
                  afterElements.toString() + " {" +
                    "content: '';" +
                    "display: block;" +
                    "z-index: -1;" +
                    "position: absolute;" +
                    "top: 0;" +
                    "bottom: 0;" +
                    "left: 0;" +
                    "right: 0;" +
                    "opacity: 0.6;" +
                    "background: url(" + image + ");" +
                  "}" +
                "</style>";
      $('head').append(css);
    }
    genTriangles();
    $(window).resize(function() {
      // $('#trianglify-styles').(jquery function to remove element)
      genTriangles();
    });
    
